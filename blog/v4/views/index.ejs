<% include ./partials/header.ejs %>

    <div class="container" style="margin-top:5%;">
         <header class="jumbotron">
            <div class="container">
                <h1>Story Land</h1>
                  <p>Create, Read, Comment the stories</p>
                  <p><a class="btn btn-primary btn-lg" href="/new" role="button">New Story</a></p>
           </div>
         </header>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% stories.forEach(function(story){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                       <img src="<%= story.image %>">
                       <div class="caption">
                           <h4><%= story.name %> by <em><%= story.author.username%></em></h4>
                           <h5><%= story.description.substring(0,100) %></h5>
                       </div>
                       <p>
                           <a href="/index/<%= story._id %>" class="btn btn-primary">More Info</a>
                       </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>





<% include ./partials/footer.ejs %>